@charset "UTF-8";

/**
 * 
 */

.rf-header {
    position: fixed;
    width: 100%;
    height: 1.92rem;
    line-height: 1.92rem;
    padding: 5px 0 5px .64rem;
    background: #00adef;
    font-size: .72rem;
    color: #fff;
    box-sizing: border-box;
    .rf-header-icon {
        height: 100%;
    }
    .icon-forward {
        position: absolute;
        right: .8rem;
        margin-top: -5px;
        &:after {
            content: "";
            display: inline-block;
            width: .59rem;
            height: .59rem;
            border-top: 2px solid #fff;
            border-right: 2px solid #fff;
            -webkit-transform: rotate(45deg);
            transform: rotate(45deg);
            box-sizing: border-box;
        }
    }
}

#rfPage .page_title {
    padding: .384rem .64rem;
    padding-top: 2.304rem;
    font-size: .64rem;
    line-height: 1.3;
}

.rf-wrap {
    padding: 0 1rem;
    .baseinfo-wrap {
        margin-top: 1.28rem;
        margin-bottom: .384rem;
        font-size: .768rem;
        line-height: 1.8;
    }
}

.upload-wrap {
    .upload-item-wrap {
        width: 47.5%;
    }
    .upload-item {
        position: relative;
        &:before {
            content: "";
            display: block;
            padding-top: 70.748%;
        }
    }
    .upload-btn {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background: url(../images/upload.png) center center no-repeat;
        background-size: cover;
        border: 1px solid #fff;
        &:active {
            border: 1px dashed #01a3e4;
        }
    }
    .upload-topic {
        margin-top: 0.5rem;
        font-size: 0.7rem;
        color: #666;
        text-align: center;
    }
}

#uploadBtn {
    margin-top: 2rem;
    font-size: 0.854rem;
}

#alertDialog .dialog_hd {
    position: relative;
    height: 1.92rem;
    background: #01a3e4;
    color: #fff;
    font-size: .896rem;
    border-top-left-radius: .256rem;
    border-top-right-radius: .256rem;
    .dialog_icon {
        position: absolute;
        left: 1rem;
        top: -.512rem;
        width: 1.92rem;
        height: 1.92rem;
        background: url(../images/dialog_icon.png) center center no-repeat;
        background-size: cover;
    }
    .dialog_title {
        font-style: normal;
        font-weight: 400;
        line-height: 1.92rem;
    }
    .dialog_close_outer {
        position: absolute;
        top: 0;
        right: 0;
        width: 1.92rem;
        height: 1.92rem;
        .dialog_close {
            display: block;
            width: 100%;
            height: 100%;
            background: url(../images/dialog_close.png) center center no-repeat;
            background-size: cover;
            -webkit-transform: scale(.5);
            transform: scale(.5);
        }
    }
}

#alertDialog {
    .weui_dialog {
        width: 90%;
        padding-bottom: 1rem;
        border-radius: .256rem;
        overflow: visible;
    }
    .dialog_bd {
        padding: .8rem 0;
        line-height: 1.8;
    }
    .warning_title {
        font-size: .768rem;
        color: #ff0000;
    }
    .warning_info {
        font-size: .64rem;
        color: #666666;
    }
    .dialog_ft .weui_btn {
        width: 50%;
        font-size: .768rem;
    }
}

.cm-header {
    height: 44px;
    line-height: 44px;
    text-align: center;
    background-color: #00adef;
    color: #fff;
}

.cm-header .cm-header-icon {
    width: 44px;
    height: 44px;
    display: inline-block;
    text-align: center;
}

.cm-header .cm-page-title {
    line-height: 44px;
    font-size: 18px;
}

.icon-back::before {
    content: "";
    display: inline-block;
    width: 16px;
    height: 16px;
    /*  vertical-align: middle; */
    border-left: 2px solid #fff;
    border-bottom: 2px solid #fff;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    box-sizing: border-box;
}

#rfPage .weui_actionsheet {
    background-color: #fff;
}

.qrcode-wrap {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 16.0rem;
    height: 8.405333rem;
    -webkit-transform: translate3d(-50%, -50%, 0);
    transform: translate3d(-50%, -50%, 0);
}

.qrcode-wrap img {
    display: block;
    width: 100%;
    height: 100%;
}

#rfPage .weui_dialog_hd,
#rfPage .weui_toast,
#ppcPage .weui_dialog_hd,
#ppcPage .weui_toast {
    font-size: 16px;
}

.agreement-wrap {
    padding: .5rem 1rem 0;
    font-size: .6rem;
    .heading {
        font-size: .7rem;
        font-weight: bold;
        text-align: center;
    }
    .salutation {
        font-weight: bold;
    }
    .agreement-body {
        p {
        	line-height: 1.5rem;
            text-indent: 1.2rem;
        }
        a {
        	text-decoration: underline;
        }
    }
    .signature,
    .signature-date {
        text-align: right;
    }
}
