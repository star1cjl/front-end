<body>
    <div class="container" id="container">
    </div>
    <script type="text/javascript">
    jQuery(document).ready(function($) {
        var router = new Router({
            container: '#container',
            enterTimeout: 250,
            leaveTimeout: 250
        });

        var memberCenter = {
            url: '/',
            className: 'memberCenter',
            render: function() {
                return $("#centerBox").html();
            }
        }

        var addAccount = {
            url: '/addAccount',
            className: 'addAccount',
            render: function() {
                return $("#addAccount").html();
            },
            bind: function(event) {
                /* Act on the event */

            }
        }

        var changeNickName = {
            url: '/changeNickName',
            className: 'changeNickName',
            render: function() {
                return $("#changeNickName").html();
            }
        }

        var changeSettleAccount = {
            url: '/changeSAccount',
            className: 'changeSAccountdf',
            render: function() {
                return $("#changeSAccount").html();
            }
        }
        var changeMobile = {
            url: '/changeMobile',
            className: 'changeMobile',
            render: function() {
                return $("#changeMobile").html();
            }
        }
        var changeAddress = {
            url: '/changeAddress',
            className: 'changeAddress',
            render: function() {
                return $("#changeAddress").html();
            }
        }

        var changePwdAffirm = {
            url: '/changePwdAffirm',
            className: 'changePwdAffirm',
            render: function() {
                return $("#changePwdAffirm").html();
            }
        }
        var changePwd = {
            url: '/changePwd',
            className: 'changePwd',
            render: function() {
                return $("#changePwd").html();
            },
            bind: function() {
                $(".toggelType").click(function(event) {
                    /* Act on the event */

                    var type = $(this).parent().prev("div").find("input").attr('type');
                    if (type == 'password') {
                        $(this).parent().prev("div").find("input").attr('type', 'text');
                    } else {
                        $(this).parent().prev("div").find("input").attr('type', 'password');
                    }
                });
            }
        }

        router.push(memberCenter)
            .push(addAccount)
            .push(changeNickName)
            .push(changeSettleAccount)
            .push(changeMobile)
            .push(changeAddress)
            .push(changePwdAffirm)
            .push(changePwd)
            .setDefault('/')
            .init();
    });
    </script>
